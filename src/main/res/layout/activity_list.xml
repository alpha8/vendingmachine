<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListActivity"
    android:background="#fff"
    android:gravity="top|center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:id="@+id/id_list_banner"
        android:layout_marginBottom="8dp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/id_list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="75dp"
        android:layout_below="@+id/id_list_banner"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:gravity="right|center_vertical"
            android:background="#F3F1F1">
            <Button
                android:id="@+id/id_list_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_circle"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorLightDark"
                android:width="100dp"
                android:height="20dp"
                style="?android:attr/borderlessButtonStyle"
                android:text="@string/back_button" />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorFooterDash" />
    </FrameLayout>

</RelativeLayout>