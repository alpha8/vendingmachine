<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/rl_takengoods_icon">
        <ImageView
            android:layout_width="360dp"
            android:layout_height="240dp"
            android:id="@+id/id_takengoods_icon"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            />
        <RelativeLayout
            android:id="@+id/rl_takengoods_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/id_takengoods_icon"
            android:padding="20dp"
            android:layout_marginRight="200dp"
            >
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:id="@+id/id_takengoods_name"
                tools:text="商品名称"
                android:textSize="26dp"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/id_takengoods_name"
                android:id="@+id/id_takengoods_code"
                android:layout_marginTop="20dp"
                tools:text="兑换码"
                android:textStyle="bold"
                android:textSize="24dp"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="240dp"
            android:layout_marginLeft="-200dp"
            android:layout_toRightOf="@+id/rl_takengoods_info"
            android:padding="20dp"
            android:gravity="center"
            >
            <TextView
                android:id="@+id/id_takengoods_btn"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/blue_button_circle"
                android:text="@string/taken_button"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textColor="@color/colorWhite"/>
        </RelativeLayout>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ccc" />
</LinearLayout>