<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoodsDetailActivity"
    android:layout_gravity="center_horizontal"
    android:orientation="vertical">

    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="650dp"
        android:id="@+id/id_banner"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="ProductName"
            android:textColor="#000"
            android:textSize="32dp"
            android:paddingLeft="12dp"
            android:paddingTop="10dp"
            />
        <TextView
            android:id="@+id/tv_sellpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Sellpoint"
            android:textColor="#999"
            android:textSize="28dp"
            android:layout_below="@+id/tv_name"
            android:paddingLeft="12dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_sellpoint">
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="¥0.00"
            android:textColor="#f01414"
            android:textSize="32dp"
            android:paddingLeft="12dp"
            />
        <TextView
            android:id="@+id/tv_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="(已售10件)"
            android:textColor="#999"
            android:textSize="28dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/tv_price"
            android:gravity="bottom"
            />
    </LinearLayout>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="180dp"
        >
        <ImageView
            android:layout_width="360dp"
            android:layout_height="360dp"
            android:id="@+id/id_qrcode"
            android:layout_gravity="left"
            android:visibility="gone"
            />
        <ImageView
            android:layout_marginLeft="360dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/pc_icon_phon_bg"
            android:id="@+id/iv_phone"
            android:layout_gravity="right"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tv_tips"
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="360dp"
            android:text="请使用微信扫码支付"
            android:textSize="20dp"
            android:textAlignment="center"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_msg"
        tools:text="支付成功"
        android:textSize="24dp"
        android:layout_marginTop="180dp"
        android:layout_gravity="center_horizontal"
        android:visibility="gone"
        />

    <Button
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/button_circle_dark"
        android:layout_gravity="center_horizontal"
        android:onClick="goBack"
        android:layout_marginTop="180dp"
        android:textColor="@color/colorLightDark"
        android:textSize="26dp"
        android:width="300dp"
        android:height="65dp"
        android:text="返回" />

</LinearLayout>