<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:adjustViewBounds="true"
            android:id="@+id/id_avatar"
            android:minHeight="260dp"/>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:id="@+id/id_product_saleoff"
            android:src="@mipmap/saleoff"
            android:scaleType="fitEnd"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/id_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="ProductName"
            android:textColor="@color/colorProductName"
            android:textSize="16dp"
            android:layout_below="@+id/id_avatar"
            android:paddingLeft="8dp"
            android:paddingTop="5dp"
            />
        <TextView
            android:id="@+id/id_sellpoint"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            tools:text="Sellpoint"
            android:textColor="@color/colorSellpoint"
            android:textSize="14dp"
            android:layout_below="@+id/id_name"
            android:paddingLeft="8dp"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id_sellpoint">
            <TextView
                android:id="@+id/id_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                tools:text="¥0.00"
                android:textColor="@color/colorPrice"
                android:textSize="16dp"
                android:paddingLeft="8dp"
                />
            <TextView
                android:id="@+id/id_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                tools:text="(已售10件)"
                android:textColor="@color/colorSellpoint"
                android:textSize="14dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@+id/id_price"
                android:gravity="bottom"
                />
        </LinearLayout>


    </RelativeLayout>
</FrameLayout>